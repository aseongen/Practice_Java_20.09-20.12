	<!-- 중복되는 동적 SQL문에 대한 처리 -->
	<sql id="search">
		<!-- 동적 SQL구문 -->
		<if test="condition == 'empNo'">
		WHERE empNo LIKE '%'||#{keyword}||'%'
		</if>
		<if test="condition == 'empId'">
		WHERE empId LIKE '%'||#{keyword}||'%'
		</if>
		<if test="condition == 'empName'">
		WHERE empName LIKE '%'||#{keyword}||'%'
		</if>
	</sql>
	
